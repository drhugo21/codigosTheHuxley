forma = str(input())
if (forma == "Q"):
    lado = float(input())
    print("{:.2f}".format(lado*lado))
    print("{:.2f}".format(lado*4))
elif (forma == "R"):
    largura = float(input())
    altura = float(input())
    print("{:.2f}".format(largura*altura))
    print("{:.2f}".format((largura*2) + (altura*2)))
elif (forma == "C"):
    raio = float(input())
    print("{:.2f}".format(3.14*(raio*raio)))
    print("{:.2f}".format(2*3.14*raio))
else:
    print("Nenhuma figura selecionada")
